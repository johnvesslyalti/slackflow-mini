generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Request {
  id          String        @id @default(uuid())
  customerId  String
  title       String
  description String?
  status      RequestStatus @default(OPEN)
  agentId     String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  ticket      Ticket?

  @@index([status])
  @@index([customerId])
}

model Ticket {
  id        String       @id @default(uuid())
  requestId String       @unique
  agentId   String
  status    TicketStatus @default(ACTIVE)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  request   Request      @relation(fields: [requestId], references: [id], onDelete: Cascade)

  @@index([agentId])
  @@index([status])
}

enum RequestStatus {
  OPEN
  ACCEPTED
  CLOSED
}

enum TicketStatus {
  ACTIVE
  WAITING_ON_CUSTOMER
  RESOLVED
}
